@page "/products/add"
@model WiredBrainCoffeeAdmin.Pages.Products.AddProductModel
@{
}


<h1> Add New Product</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div col="md-3">
                <label asp-for="NewProduct.Name">Name</label>
                <input asp-for="NewProduct.Name" class="form-control"/> 
            </div>
            <div col="md-3">
                <label asp-for="NewProduct.ShortDescription">ShortDescription</label>
                <input asp-for="NewProduct.ShortDescription" class="form-control" />
            </div>
            <div col="md-3">
                <label asp-for="NewProduct.Description">Description</label>
                <textarea asp-for="NewProduct.Description" class="form-control" > </textarea>
            </div>
            <div col="md-3">
                <label asp-for="NewProduct.Price">Price</label>
                <input asp-for="NewProduct.Price" class="form-control" />
            </div>
            <div col="md-3">
                <label asp-for="NewProduct.Category">Category</label>
                <select asp-for="NewProduct.Category" class="form-control" > 
                    <option value="Beverage">Beverage</option>
                    <option value="BeFoodverage">Food</option>
                </select>
            </div>
            <div col="md-3">
                <label asp-for="NewProduct.Upload">Image</label>
                <input asp-for="NewProduct.Upload" class="form-control" />
            </div>

            <button class="btn btn-success mt-3">Create</button>
        </form>
    </div>
    <div class="col-md-6">
        <partial name="HelpWidget"/>
    </div>
</div>

@section RightFooter {
    <img src="~/images/menu/berry-drizzle.png" />
}